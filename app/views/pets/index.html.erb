<p id="notice"><%= notice %></p>

<h1>Pets</h1>
<%= link_to 'Ver todo el historial de atenciones a mascotas',   pet_histories_path%>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Breed</th>
      <th>Date of birth</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <td><%= pet.breed %></td>
        <td><%= pet.date_of_birth %></td>
        <td><%= pet.pet_histories %></td>
        <td><%= link_to 'Show', pet %></td>
        <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
        <td><%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pet', new_pet_path %>
